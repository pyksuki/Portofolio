    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. SCROLL-TRIGGERED ANIMATIONS (Intersection Observer API)
            const elements = document.querySelectorAll('.animate-on-scroll');
            
            // Fallback for prefers-reduced-motion
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

            if (prefersReducedMotion) {
                elements.forEach(el => el.classList.add('show'));
            } else {
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const target = entry.target;
                            // Add 'show' class to trigger the CSS transition
                            target.classList.add('show');
                            
                            // Optional: Introduce a small stagger delay using the custom property
                            const delay = target.style.getPropertyValue('--i') * 0.1; // 0.1s per increment
                            if (delay !== 0) {
                                target.style.transitionDelay = `${delay}s`;
                            }

                            // Once visible, stop observing
                            observer.unobserve(target);
                        }
                    });
                }, {
                    rootMargin: '0px',
                    threshold: 0.2 // Trigger when 20% of the element is visible
                });

                elements.forEach(el => observer.observe(el));
            }


            // 2. STICKY HEADER EFFECT
            const header = document.querySelector('header');
            
            const handleScroll = () => {
                if (window.scrollY > 50) {
                    // Add subtle background when scrolled down
                    header.style.backgroundColor = 'rgba(0, 0, 0, 0.9)'; 
                    header.style.backdropFilter = 'blur(5px)'; // Modern aesthetic
                } else {
                    // Keep it transparent at the top
                    header.style.backgroundColor = 'transparent';
                    header.style.backdropFilter = 'none';
                }
            };

            window.addEventListener('scroll', handleScroll);
            handleScroll(); // Call once on load to set initial state
        });
    </script>
    
